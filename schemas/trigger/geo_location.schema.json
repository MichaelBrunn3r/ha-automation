{
  "title": "Geolocation trigger",
  "description": "Geolocation trigger fires when an entity is appearing in or disappearing from a zone",
  "type": "object",
  "properties": {
    "platform": {
      "const": "geo_location"
    },
    "entity_id": {
      "$ref": "../defs.schema.json#/$defs/str|str[]"
    },
    "zone": {
      "$ref": "../defs.schema.json#/$defs/zone"
    },
    "event": {
      "enum": [
        "enter",
        "leave"
      ]
    },
    "id": {
      "type": "string"
    },
    "enable": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "entity_id",
    "zone",
    "event"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/geo_location.schema.json"
}
