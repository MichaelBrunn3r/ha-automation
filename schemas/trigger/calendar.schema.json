{
  "title": "Calendar trigger",
  "description": "Calendar trigger fires when a Calendar event starts or ends, allowing much more flexible automations that using the Calendar entity state which only supports a single event start at a time",
  "type": "object",
  "properties": {
    "platform": {
      "const": "calendar"
    },
    "event": {
      "enum": [
        "start",
        "end"
      ]
    },
    "entity_id": {
      "$ref": "../defs.schema.json#/$defs/str|str[]"
    },
    "offset": {
      "$ref": "../defs.schema.json#/$defs/HHMMSS_offset"
    },
    "id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "event",
    "entity_id"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/calendar.schema.json"
}
