{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/mqtt.schema.json",
  "title": "MQTT trigger",
  "description": "Fires when a specific message is received on given MQTT topic",
  "type": "object",
  "properties": {
    "platform": {
      "const": "mqtt"
    },
    "topic": {
      "type": "string"
    },
    "payload": {
      "type": "string"
    },
    "encoding": {
      "type": "string",
      "examples": [
        ""
      ],
      "default": "utf-8"
    },
    "value_template": {
      "$ref": "../defs.schema.json#/$defs/template"
    },
    "id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "topic"
  ]
}