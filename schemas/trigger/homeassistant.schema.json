{
  "title": "Home Assistant trigger",
  "description": "Fires when Home Assistant starts up or shuts down",
  "type": "object",
  "properties": {
    "platform": {
      "const": "homeassistant"
    },
    "event": {
      "enum": [
        "start",
        "shutdown"
      ]
    },
    "id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "event"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/homeassistant.schema.json"
}
