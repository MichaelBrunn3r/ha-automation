{
  "title": "State trigger",
  "description": "Fires when the state of any of given entities changes",
  "type": "object",
  "properties": {
    "platform": {
      "const": "state"
    },
    "entity_id": {
      "$ref": "../defs.schema.json#/$defs/str|str[]"
    },
    "from": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "not_from": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "to": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "not_to": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "for": {
      "oneOf": [
        {
          "$ref": "../defs.schema.json#/$defs/HHMMSS"
        },
        {
          "$ref": "../defs.schema.json#/$defs/templateable_time_period"
        }
      ]
    },
    "attribute": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "enable": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "entity_id"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/state.schema.json"
}
