{
  "title": "Zone trigger",
  "description": "Zone trigger fires when an entity is entering or leaving the zone",
  "type": "object",
  "properties": {
    "platform": {
      "const": "zone"
    },
    "entity_id": {
      "$ref": "../defs.schema.json#/$defs/entity_id|entity_id[]"
    },
    "zone": {
      "$ref": "../defs.schema.json#/$defs/zone"
    },
    "event": {
      "enum": [
        "enter",
        "leave"
      ]
    },
    "id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "entity_id",
    "zone",
    "event"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/zone.schema.json"
}
