{
  "title": "Numeric state trigger",
  "description": "Fires when the numeric value of an entity's state (or attribute's value if using the 'attribute' property, or the calculated value if using the 'value_template' property) crosses (and only when crossing) a given threshold",
  "type": "object",
  "properties": {
    "platform": {
      "const": "numeric_state"
    },
    "entity_id": {
      "$ref": "../defs.schema.json#/$defs/str|str[]"
    },
    "attribute": {
      "type": "string"
    },
    "value_template": {
      "$ref": "../defs.schema.json#/$defs/template"
    },
    "below": {
      "type": "number"
    },
    "above": {
      "type": "number"
    },
    "for": {
      "oneOf": [
        {
          "$ref": "../defs.schema.json#/$defs/HHMMSS"
        },
        {
          "$ref": "../defs.schema.json#/$defs/templateable_time_period"
        }
      ]
    },
    "id": {
      "type": "string"
    },
    "enable": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "entity_id"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/numeric_state.schema.json"
}
