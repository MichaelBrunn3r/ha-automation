  "type": "object",
  "properties": {
    "platform": {
      "const": "time"
    },
    "at": {
      "$ref": "../defs.schema.json#/$defs/str|str[]"
    },
    "id": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "platform",
    "at"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/trigger/time.schema.json"
}
