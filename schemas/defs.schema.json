{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/defs.schema.json",
  "$defs": {
    "template_string": {
      "description": "A template string.",
      "type": "string",
      "pattern": ".*(\\{\\{.*\\}\\}).*",
      "$comment": "https://www.home-assistant.io/docs/configuration/templating/#important-template-rules"
    },
    "helper_entity": {
      "type": "string",
      "pattern": "^input_.+"
    },
    "time_offset": {
      "type": "string",
      "pattern": "-?\\d\\d:\\d\\d:\\d\\d"
    },
    "time": {
      "type": "string",
      "pattern": "\\d\\d:\\d\\d:\\d\\d"
    },
    "zone_id": {
      "type": "string",
      "pattern": "^zone\\..+"
    }
  }
}
