{
  "$defs": {
    "template": {
      "description": "A template string.",
      "type": "string",
      "pattern": ".*(\\{\\{.+\\}\\}).*"
    },
    "obj|template": {
      "oneOf": [
        {
          "$ref": "#/$defs/template"
        },
        {
          "type": "object"
        }
      ]
    },
    "str|str[]": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "HHMMSS": {
      "type": "string",
      "pattern": "\\d\\d:\\d\\d:\\d\\d"
    },
    "HHMMSS_offset": {
      "type": "string",
      "pattern": "-?\\d\\d:\\d\\d:\\d\\d"
    },
    "time_period": {
      "type": "object",
      "properties": {
        "hours": {
          "type": "integer",
          "minimum": 0
        },
        "minutes": {
          "type": "integer",
          "minimum": 0,
          "maximum": 59
        },
        "seconds": {
          "type": "integer",
          "minimum": 0,
          "maximum": 59
        }
      }
    },
    "templateable_time_period": {
      "type": "object",
      "properties": {
        "hours": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "$ref": "#/$defs/template"
            }
          ]
        },
        "minutes": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 59
            },
            {
              "$ref": "#/$defs/template"
            }
          ]
        },
        "seconds": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 59
            },
            {
              "$ref": "#/$defs/template"
            }
          ]
        }
      }
    },
    "zone_id": {
      "type": "string",
      "pattern": "^zone\\..+"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/defs.schema.json"
}
