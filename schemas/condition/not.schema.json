{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/not.schema.json",
  "title": "NOT Condition",
  "description": "Test multiple conditions in one condition statement. Passes if all embedded conditions are not valid",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "condition": {
          "const": "not"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "condition",
        "conditions"
      ]
    },
    {
      "type": "object",
      "properties": {
        "not": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "not"
      ]
    }
  ]
}