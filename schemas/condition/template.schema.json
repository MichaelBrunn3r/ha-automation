{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/template.schema.json",
  "title": "Template Condition",
  "description": "The template condition tests if the given template renders a value equal to true",
  "oneOf": [
    {
      "$ref": "../defs.schema.json#/$defs/template"
    },
    {
      "type": "object",
      "properties": {
        "condition": {
          "const": "template"
        },
        "value_template": {
          "$ref": "../defs.schema.json#/$defs/template"
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "condition",
        "value_template"
      ]
    }
  ]
}