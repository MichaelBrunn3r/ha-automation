{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/or.schema.json",
  "title": "OR Condition",
  "description": "Test multiple conditions in one condition statement. Passes if any embedded condition is valid",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "condition": {
          "const": "or"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "condition",
        "conditions"
      ]
    },
    {
      "type": "object",
      "properties": {
        "or": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "or"
      ]
    }
  ]
}