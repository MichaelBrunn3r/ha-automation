{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/trigger.schema.json",
  "title": "Trigger Condition",
  "description": "The trigger condition can test if an automation was triggered by a certain trigger, identified by the trigger's 'id'",
  "type": "object",
  "properties": {
    "condition": {
      "const": "trigger"
    },
    "id": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "alias": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "condition",
    "id"
  ]
}