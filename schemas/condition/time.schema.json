{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/time.schema.json",
  "title": "Time Condition",
  "description": "The time condition can test if it is after a specified time, before a specified time or if it is a certain day of the week",
  "type": "object",
  "properties": {
    "condition": {
      "const": "time"
    },
    "after": {
      "oneOf": [
        {
          "$ref": "../defs.schema.json#/$defs/HHMMSS"
        },
        {
          "type": "string",
          "pattern": "^(input_datetime|sensor)\\..+"
        }
      ]
    },
    "before": {
      "oneOf": [
        {
          "$ref": "../defs.schema.json#/$defs/HHMMSS"
        },
        {
          "type": "string",
          "pattern": "^(input_datetime|sensor)\\..+"
        }
      ]
    },
    "weekday": {
      "type": "array",
      "items": {
        "enum": [
          "mon",
          "tue",
          "wed",
          "thu",
          "fri",
          "sat",
          "sun"
        ]
      }
    },
    "alias": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "condition"
  ]
}