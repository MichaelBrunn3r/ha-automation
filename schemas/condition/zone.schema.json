{
  "title": "Zone Condition",
  "description": "Zone conditions test if an entity is in a certain zone",
  "type": "object",
  "properties": {
    "alias": {
      "type": "string"
    },
    "condition": {
      "const": "zone"
    },
    "entity_id": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "zone": {
      "$ref": "../defs.schema.json#/$defs/zone"
    },
    "state": {
      "type": "array",
      "items": {
        "$ref": "../defs.schema.json#/$defs/zone"
      }
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": [
    "condition",
    "entity_id"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/zone.schema.json"
}
