{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/MichaelBrunn3r/ha-blueprints/schemas/condition/and.schema.json",
  "title": "AND Condition",
  "description": "Test multiple conditions in one condition statement. Passes if all embedded conditions are valid",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "condition": {
          "const": "and"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "condition",
        "conditions"
      ]
    },
    {
      "type": "array",
      "items": {
        "$ref": "../condition.schema.json"
      }
    },
    {
      "type": "object",
      "properties": {
        "and": {
          "type": "array",
          "items": {
            "$ref": "../condition.schema.json"
          }
        },
        "alias": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": [
        "and"
      ]
    }
  ]
}